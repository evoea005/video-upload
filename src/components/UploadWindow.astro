---
import Spinner from "./Spinner.astro";
---

<div id="uploadwindow" hidden>
	<h2>Upload a video</h2>
	<input type="file" id="file" accept="video/*" />
	<button id="confirmupload">Upload</button>

	<br />

	<Spinner />

	<img
		src="icons/x.svg"
		alt="close"
		id="closebutton"
		onclick="document.getElementById('uploadwindow').style.display = 'none'"
	/>
</div>

<script>
	import Toastify from "toastify-js";
	import "toastify-js/src/toastify.css";

	const confirmupload = document.querySelector("#confirmupload");
	const fileinput = document.querySelector("#file");
	const spinner = document.querySelector(".loader");

	var filelist = fileinput.files;

	// disable upload button if no file selected
	function testfile() {
		filelist = fileinput.files;

		confirmupload.disabled = filelist.length == 0;
	}

	testfile();

	fileinput.addEventListener("change", testfile);

	confirmupload.addEventListener("click", uploadfile);

	async function uploadfile() {
		spinner.style.display = "inline-block";

		let file = fileinput.files.item(0);

		let formdata = new FormData();
		formdata.append("file", file);
		formdata.append("session", localStorage.getItem("session"));

		const res = await fetch("/api/upload", {
			method: "POST",
			body: formdata,
		});

		const status = await res.status;

		console.log(status)

		if (status == 200) {
			Toastify({
				text: `Uploaded ${file.name}`,
				className: "uploadnotification toast_success",
				position: "center",
				close: true,
				duration: 3000,
			}).showToast();

			document.getElementById("uploadwindow").style.display = "none";
		}

		if (status == 413) {
			Toastify({
				text: `File too big, max is 1 GB.`,
				className: "uploadnotification toast_error",
				position: "center",
				close: true,
				duration: 3000,
			}).showToast();
		}


		spinner.style.display = "none";

		fileinput.value = "";
		window.location.reload();
	}
</script>

<style>
	#uploadwindow {
		margin: auto;
		position: fixed;
		left: 0;
		right: 0;
		top: 0;
		bottom: 0;
		width: 50%;
		height: 50%;
		border: none;
		font-size: 1.2em;
		padding: 12px 18px;
		font-family: system-ui, sans-serif;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		font-weight: bold;
		border-radius: 10px;
		color: var(--text);
		background-color: var(--background-2);
		display: none;
		flex-direction: column;
		align-items: center;
	}

	#uploadwindow * {
		margin: 16px;
	}

	input[type="file"] {
		margin: 10px;
		border: none;
		padding: 12px 18px;
		font-family: system-ui, sans-serif;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		font-weight: bold;
		border-radius: 8px;
		color: var(--text);
		background-color: var(--background-3);
		transition: background-color 0.2s ease;
	}

	input[type="file"]::file-selector-button {
		margin: 10px;
		border: none;
		padding: 12px 18px;
		font-family: system-ui, sans-serif;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		font-weight: bold;
		border-radius: 8px;
		color: var(--text);
		background-color: var(--background-4);
		transition: background-color 0.2s ease;
		cursor: pointer;
	}

	input[type="file"]::file-selector-button:hover {
		background-color: var(--background-5);
	}

	#confirmupload {
		margin: 10px;
		border: none;
		padding: 12px 18px;
		font-family: system-ui, sans-serif;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		font-weight: bold;
		border-radius: 8px;
		color: var(--text);
		background-color: var(--background-4);
		transition: background-color 0.2s ease;
		cursor: pointer;
	}

	#confirmupload:hover {
		background-color: var(--background-5);
	}

	#closebutton {
		position: absolute;
		top: 8px;
		right: 8px;
		width: 30px;
		height: 30px;
		filter: invert(0.7);
		cursor: pointer;
		transition: all 0.2s ease;
	}

	#closebutton:hover {
		filter: invert(1);
	}

	#closebutton:active {
		transform: scale(0.9);
	}
</style>
