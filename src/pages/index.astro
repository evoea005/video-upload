<script>
	const response = fetch("/api/checksession", {
		method: "POST",
		body: JSON.stringify({ session: localStorage.getItem("session") }),
		headers: {
			"Content-Type": "application/json",
		},
	})
		.then((res) => res.json())
		.then((data) => {
			if (data.success) {
				document.querySelector("h1").innerHTML = "Hello, " + data.username;
			}
		});
</script>

