---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<link rel="icon" type="image/ico" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Nav />

		<slot />

		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--accent: #8800ff;
		--background: #13151a;
		--background-light: #1e2127;
		--background-lighter: #23262d;
		--background-lighterer: #2d3037;
		--background-lightererer: #363a42;
		--background-lighterererer: #3e424b;
		--text: #f0f0f0;
	}

	html {
		font-family: system-ui, sans-serif;
		background-color: var(--background);
	}

	body {
		margin: 0;
		padding: 0;
		color: var(--text);
		min-height: 100vh;
		overflow-x: hidden;
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>

<script>
	// make current site bold in nav
	const links: NodeListOf<HTMLAnchorElement> = document.querySelectorAll("nav a");

	links.forEach((link: HTMLAnchorElement) => {
		if (link.href === window.location.href) {
			link.style.fontWeight = "bold";
		}
	});
</script>
