---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import Notifications from "../components/Notifications.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<link rel="icon" type="image/ico" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Nav />

		<slot />

		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--accent: #8800ff;
		--background-1: #13151a;
		--background-2: #1e2127;
		--background-3: #23262d;
		--background-4: #2d3037;
		--background-5: #363a42;
		--background-6: #3e424b;
		--text: #f0f0f0;
	}

	html {
		font-family: system-ui, sans-serif;
		background-color: var(--background-1);
	}

	body {
		margin: 0;
		padding: 0;
		font-family: system-ui, sans-serif;
		color: var(--text);
		min-height: 100vh;
		overflow-x: hidden;
	}

	.uploadnotification {
		background: linear-gradient(to right, var(--background-5), var(--background-4)) !important;
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1) !important;
	}

	.toast_success {
		border: 2px solid #5ace84;
	}

	.toast_error {
		border: 2px solid #ce5a5a;
	}
</style>
